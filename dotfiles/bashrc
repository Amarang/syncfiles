    fi
    for file in "$@"; do
        echo "uaf-6.t2.ucsd.edu/~${USER}/dump/$(basename $file)"
    done
    # if [[ -f $1 ]]; then
    #     ic $1
    # fi
else
    echo "Usage: web <input files>"
fi
}
export -f web

function rweb {
if [ $# -gt 0 ]; then
    chmod -R a+r $@
    if [[ $(hostname) == *uaf-* ]]; then 
